<div class="box">
    <div class="container">
     	<div class="row">
       
                <%data.map(d=>{%>
               
			    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
               
					<div class="box-part text-center">
                        
                        <!-- <i class="fa fa-behance fa-3x" aria-hidden="true"></i> -->
                        
						<div class="title">
							<h3><%=d.name%></h3>
						</div>
                        
						<div class="text">
							<span><%=d.phone%><br><%=d.address%><span>
						</div>
                        
						<a href="/order/make/<%=d._id%>"><button class="btn btn-primary">Order</button></a>
                        
					 </div>
                </div>
                <% })%>	 
				
				
		
		</div>		
    </div>
</div>
