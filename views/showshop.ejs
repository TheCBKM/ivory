        crossorigin="anonymous"></script>
    <style>
        @import url('https://fonts.googleapis.com/css?family=Josefin+Sans:100,300,400,600,700');

        body {
            background: #f2f2f2;
            font-family: 'Josefin Sans', sans-serif;
        }

        h3 {
            font-family: 'Josefin Sans', sans-serif;
        }

        .box {
            padding: 5px 0px;
        }

        .box-part {
            background: rgb(243, 3, 3);
            border-radius: 10px;
            padding: 30px 10px;
            margin: 30px 0px;
        }

        .box-part:hover {
            background: rgb(214, 182, 75);
        }

        .box-part:hover .fa,
        .box-part:hover .title,
        .box-part:hover .text,
        .box-part:hover a {
            color: #FFF;
            -webkit-transition: all 1s ease-out;
            -moz-transition: all 1s ease-out;
            -o-transition: all 1s ease-out;
            transition: all 1s ease-out;
        }

        .text {
            margin: 20px 0px;
        }

        .fa {
            color: rgb(215, 65, 65);
        }
    </style>





    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">

</head>

<body>
    <% include  partials/coustomerNav%>




    <!--
    instagram: www.instagram.com/programmingtutorial
    site: programlamadersleri.net
-->
    <center>
        <h3>Choose Shops
        </h3>



        <div id="carouselExampleControls" interval=100 class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="/static/deliverybike.png" height="250px" class="d-block w-100" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="/static/vegi.jpeg" class="d-block w-100" height="250px" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="/static/pul.jpeg" class="d-block w-100" height="250px" alt="...">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
        <div class="box">
            <div class="container">
                <div class="row">

                    <%data.map(d=>{%>

                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">

                        <div class="box-part text-center">

                            <!-- <i class="fa fa-behance fa-3x" aria-hidden="true"></i> -->

                            <div class="title">
                                <h3><%=d.name%></h3>
                            </div>

                            <div class="text">
                                <span><%=d.phone%><br><%=d.address%><span>
                            </div>

                            <a href="/order/make/<%=d._id%>"><button class="btn btn-danger">Order</button></a>

                        </div>

                        <div class="box-part text-center">

                            <!-- <i class="fa fa-behance fa-3x" aria-hidden="true"></i> -->

                            <div class="title">
                                <h3><%=d.name%></h3>
                            </div>

                            <div class="text">
                                <span><%=d.phone%><br><%=d.address%><span>
                            </div>

                            <a href="/order/make/<%=d._id%>"><button class="btn btn-danger">Order</button></a>

                        </div>

                        <div class="box-part text-center">

                            <!-- <i class="fa fa-behance fa-3x" aria-hidden="true"></i> -->

                            <div class="title">
                                <h3><%=d.name%></h3>
                            </div>

                            <div class="text">
                                <span><%=d.phone%><br><%=d.address%><span>
                            </div>

                            <a href="/order/make/<%=d._id%>"><button class="btn btn-danger">Order</button></a>

                        </div>
                    </div>
                    <% })%>



                </div>
            </div>
        </div>
        <div class="row">
            <div class="col col-sm-4">
                <img src="/static/s1.jpeg" width="50px" height="60px">
            </div>
            <div class="col col-sm-4">
                <img src="/static/s2.jpeg" height="60px" width="50px">
            </div>
            <div class="col col-sm-4">
                <img src="/static/s3.jpeg" height="60px" width="50px">
            </div>
            <div class="col product col-sm-4 my-auto">
                <img src="/static/s4.jpeg" height="60px" width="50px">
            </div>
            <div class="col product col-sm-4">
                <img src="/static/s5.jpeg" height="60px" width="50px">
            </div>
            <div class="col product col-sm-4">
                <img src="/static/1565253613714.png" height="60px" width="50px">
            </div>
            <div class="col product col-sm-4">
                <img src="/static/1565333495630.jpg" height="60px" width="50px">
            </div>
            <div class="col product col-sm-4">
                <img src="/static/1565258491157.jpg" height="60px" width="50px">
            </div>


        </div>
    </center>


</body>

</html>