<body>
    <% include  partials/coustomerNav%>
    <center>
        <div class="row">
            <div class="col col-md-12 mx-auto ">
                <% data.map((d,i)=>{%>



                <div class="card" style="width: 18rem;">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-4 mx-auto  ">
                                <br>
                                <img alt="<%=d.img%>" src="/static/<%=d.img%>" height="50px">
                            </div>
                            <div class="col-4 " style="text-align: center;color: rgb(224, 70, 32)">
                                <b><div style="font-size: 15px"> <%= d.name%></div></b>
                                <br>
                                <br>
                                â‚¹<%= d.price%>/<%=d.per%>.
                            </div>

                            <div class="col-4 mx-auto">
                                <button class="btn"
                                    onclick="minus('<%=d.id%>','<%=d.name%>','<%=d.price%>','<%=i%>','<%=d.available%>')">
                                    <i class="fa fa-minus" style="color: red" aria-hidden="true"></i></button>
                                <br>
                                <input value="0" style="width: 25px; height: 20px" size="1" id="inp<%=i%>" />
                                <br>
                                <button
                                    onclick="plus('<%=d.id%>','<%=d.name%>','<%=d.price%>','<%=i%>','<%=d.available%>')"
                                    class="btn">
                                    <i class="fa fa-plus" style="color: red" aria-hidden="true"></i></button>
                            </div>
                        </div>
                    </div>
                </div>
                <% })%>
            </div>
        </div>
        <div class="col col-sm-12 mx-auto ">

            <!-- Button trigger modal -->
            <button type="button" onclick="finalize()" class="btn btn-primary" data-toggle="modal"
                data-target="#checkout">
                Check Out
            </button>

            <!-- Modal -->
            <div class="modal fade" id="checkout" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
                aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Check Out</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div id="myorder" class="modal-body">

                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Edit</button>
                            <button type="button" onclick="order()" class="btn btn-danger">Finalize Order</button>
                        </div>
                        </dtiv>
                    </div>
                </div>
            </div>
    </center>

    <script>
        arr = []
        tprice = 0
        function minus(pid, name, price, id, available) {
            p = -1
            if (document.getElementById(`inp${id}`).value > 0) {
                --document.getElementById(`inp${id}`).value
                for (i = 0; i < arr.length; i++) {
                    if (arr[i].product == pid) {
                        p = i
                    }
                }
                console.log(p)
                if (p != -1) {
                    arr[p].quantity = document.getElementById(`inp${id}`).value
                    arr[p].available =arr[p].pava- document.getElementById(`inp${id}`).value

                }
                else {
                    arr.push({
                        product: pid,
                        quantity: document.getElementById(`inp${id}`).value,
                        price: price,
                        name: name,
                        available: available - 1,
                        pava: available
                    })
                }

            }

        }
        function plus(pid, name, price, id, available) {
            ++document.getElementById(`inp${id}`).value

            p = -1

            for (i = 0; i < arr.length; i++) {
                if (arr[i].product == pid) {
                    p = i

                }
            }
            console.log(p)
            if (p != -1) {
                if (arr[p].available - document.getElementById(`inp${id}`).value < 0) {

                    alert("can not add more")
                    --document.getElementById(`inp${id}`).value
                    arr[p].available -= document.getElementById(`inp${id}`).value


                }
                else {
                    // ++document.getElementById(`inp${id}`).value

                    arr[p].quantity = document.getElementById(`inp${id}`).value
                    arr[p].available =arr[p].pava- document.getElementById(`inp${id}`).value

                    // alert("can  add more")

                }
            }
            else {
                arr.push({
                    product: pid,
                    quantity: document.getElementById(`inp${id}`).value,
                    price: price,
                    name: name,
                    available: Number(available - 1),
                    pava: available
                })
            }

        }

        function finalize() {
            tprice = 0
            for (i = 0; i < arr.length; i++) {
                if (arr[i].quantity == 0) {

                    arr.splice(i, 1)
                }
                if (arr[i].available < 0) {
                    alert(`cannot add ${arr[i].name} please use less value`)
                    arr.splice(i, 1)
                }
            }
            for (i = 0; i < arr.length; i++) {
                tprice += arr[i].quantity * arr[i].price
            }
            data = {
                products: arr,
                price: tprice
            }
            console.log(data)
            document.getElementById('myorder').innerHTML = ""
            for (i = 0; i < arr.length; i++) {
                document.getElementById('myorder').innerHTML += `
                <div class="card" style="width: 18rem;">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-4 mx-auto  ">
                                    <b> ${arr[i].name}</b>
                            </div>
                           
                            <div class="col-4 " style="text-align: center">
                                
                                ${arr[i].quantity}
                            </div>
                            <div class="col-4 mx-auto">
                               ${arr[i].price * arr[i].quantity}
                            </div>
                        </div>
                    </div>

                </div>
                
                `
            }
            document.getElementById('myorder').innerHTML += `
                <div class="card" style="width: 18rem;">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-4 mx-auto  ">
                                    <b> Total</b>
                            </div>
                            <div class="col-4 " style="text-align: center">
                                
                              
                              
                            </div>

                            <div class="col-4 mx-auto">
                               ${tprice}
                            </div>
                        </div>
                    </div>

                </div>
                
                `
        }
        function order() {
            if (tprice == 0) {
                alert("please purchase alteast one item")
            }
            else {
                sendData = {
                    products: arr,
                    price: tprice
                }
                axios.post('/order/trans', sendData).then(res => {
                    console.log(res)
                    alert("order genrated")
                    window.location.href = '/order/make/5d5ae77e4b112e67bbbcb2f3'
                })
            }
        }
    </script>

