                <ul class="list-group">
                  <li class="list-group-item">Total Product :-<%=products.length%> </li>
                  <li class="list-group-item">Total Orders :-<%=order.length%></li>
                  <li class="list-group-item">Revenue :-₹50000/-</li>

                </ul>
              </p>
            </div>
            <div class="card-body">
              <h5 class="card-title">Monthly</h5>
              <p class="card-text">
                <ul class="list-group">
                  <li class="list-group-item">Total Product :-<%=products.length%> </li>
                  <li class="list-group-item">Total Orders :-<%=order.length%></li>
                  <li class="list-group-item">Revenue :-₹70000/-</li>
                </ul>
              </p>
            </div>

          </div>
        </div>
        <div class="col col-md-6">

          <div class="card  ml-auto" style="width: 100%;">
            <img class="img-top" width="200px" height="200px" src="/static/<%=shop.img%>" alt="Card image cap">
            <div class="card-body">
              <h5 class="card-title"><%=shop.name%></h5>
              <p class="card-text">
                <ul class="list-group">
                  <li class="list-group-item">Total Product :-<%=products.length%> </li>
                  <li class="list-group-item">Total Orders :-<%=order.length%></li>

                </ul>
              </p>
            </div>
          </div>
          <br>
          <div class="card-body">
            <h5 class="card-title">Commission to <br>XYZ company </h5>
            <p class="card-text">
              <ul class="list-group">
               
                <li class="list-group-item">Ammount :-₹4000/-</li>
              </ul>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
  
