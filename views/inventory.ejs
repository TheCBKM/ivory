<body>
  <% include  partials/navbar%>
  <div class="row">
    <div class="col col-md-6">

      <h1>Your Inventory</h1>

      <ul class="category-ul">
        <%categories.map(c=>{%>
        <li class="category-li"> <%=c.name%>
        </li>
        <ul class=subcategory-ul ">
                  <%subCategories.map(sc=>{%>
                  <%if(sc.category.toString()==c._id.toString()){%>
                  <li class=subcategory-li><%=sc.name%>
                  </li>
                  <ul class=" product-ul">
          <%products.map(p=>{%>
          <%if(p.subcategory.toString()==sc._id.toString()){%>
          <li class="product-li"><%=p.name%> -- <%=p.available%> <a href="/inventory/add/<%=p.id%>"> <i
                class="fa fa-refresh" aria-hidden="true"></i></a>
            <% }})%>
        </ul>
        <% }})%>

      </ul>
      <% })%>
      </ul>
    </div>
    <div class="col col-md-6">
      <div class="row">
        <div class="col col-md-6">
          <div class="card  ml-auto" style="width: 18rem;">
            <div class="card-body">
              <h5 class="card-title">Daily</h5>
              <p class="card-text">
                <ul class="list-group">
                  <li class="list-group-item">Total Product :-<%=products.length%> </li>
                  <li class="list-group-item">Total Orders :-<%=order.length%></li>
                  <li class="list-group-item">Revenue :-₹3000/-</li>

