  <style>
    a {
      text-decoration: none;
      text-decoration-color: none
    }

    .view {
      margin-left: 2%;
      width: 30%
    }

    .category-ul {
      color: blue
    }

    .category-li {
      color: rgb(77, 6, 245);
      background-color: rgb(51, 182, 223)
    }

    .subcategory-li {
      color: red;
      background-color: rgb(167, 206, 27)
    }

    .product-li::before {
      color: green;
      content: '\25BA';
    }

    .product-li {
      color: rgb(218, 30, 192);
      background-color: rgb(245, 167, 23)
    }

    .subcategory-li::before {
      color: green;
      content: '\27A4';
    }

    .category-li::before {
      color: green;
      content: '\276D';
    }
